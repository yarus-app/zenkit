{
  "version": "independent",
  "packages": ["components/*", "packages/*"],
  "stream": true,
  "parallel": true,
  "hoist": true,
  "npmClientArgs": ["--no-package-lock"],
  "ignoreChanges": ["**/lib/**", "**/fixtures/**", "**/test/**", "**/*.md"],
  "command": {
    "version": {
      "allowBranch": "main",
      "conventionalCommits": true,
      "createRelease": "github",
      "message": "chore: publish release",
      "exact": true,
      "signGitCommit": true,
      "signGitTag": true
    }
  }
}

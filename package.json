{
  "private": true,
  "description": "// TODO: write description",
  "license": "MIT",
  "repository": "github:yarus-app/zenkit",
  "author": "Yaroslav Usenko <usenko.jaroslav@gmail.com> (https://usenko.pp.ua)",
  "homepage": "https://github.com/yarus-app/zenkit",
  "bugs": "https://github.com/yarus-app/zenkit/issues",
  "scripts": {
    "postinstall": "lerna bootstrap",
    "clean:pkgs": "lerna run clean",
    "clean:lerna": "lerna clean",
    "clean": "run-s clean:**",
    "build": "cross-env NODE_ENV=production lerna exec \"rollup --config=../../scripts/build/rollup.config.js\"",
    "format:files": "prettier **/* --write --ignore-unknown --ignore-path .gitignore",
    "format:styles": "npm run lint:styles -- --fix",
    "format:code": "npm run lint:code -- --fix",
    "format": "run-s format:**",
    "lint:styles": "stylelint {components,packages}/**/{src,__tests__}/**/*.{js,jsx,mjs} --ignore-path .gitignore",
    "lint:code": "eslint . --ext .js,.jsx,.mjs --ignore-path .gitignore",
    "lint": "run-s lint:**",
    "test": "cross-env NODE_ENV=test jest",
    "coverage": "cross-env NODE_ENV=test jest --coverage",
    "publish": "lerna publish"
  },
  "keywords": [],
  "dependencies": {
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "styled-components": "^5.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-proposal-decorators": "^7.12.1",
    "@babel/plugin-proposal-do-expressions": "^7.12.1",
    "@babel/plugin-proposal-export-default-from": "^7.12.1",
    "@babel/plugin-proposal-export-namespace-from": "^7.12.1",
    "@babel/plugin-proposal-function-bind": "^7.12.1",
    "@babel/plugin-proposal-function-sent": "^7.12.1",
    "@babel/plugin-proposal-json-strings": "^7.12.1",
    "@babel/plugin-proposal-logical-assignment-operators": "^7.12.1",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.12.1",
    "@babel/plugin-proposal-numeric-separator": "^7.12.7",
    "@babel/plugin-proposal-optional-chaining": "^7.12.7",
    "@babel/plugin-proposal-pipeline-operator": "^7.12.1",
    "@babel/plugin-proposal-throw-expressions": "^7.12.1",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-syntax-import-meta": "^7.10.4",
    "@babel/plugin-transform-react-inline-elements": "^7.12.1",
    "@babel/preset-env": "^7.12.7",
    "@babel/preset-react": "^7.12.7",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@commitlint/config-lerna-scopes": "^11.0.0",
    "@rollup/plugin-babel": "^5.2.1",
    "@rollup/plugin-commonjs": "^16.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^10.0.0",
    "@rollup/plugin-url": "^5.0.1",
    "babel-jest": "^26.6.3",
    "babel-plugin-jsx-control-statements": "^4.1.0",
    "babel-plugin-macros": "^2.8.0",
    "babel-plugin-react-persist": "^0.2.0",
    "babel-plugin-transform-hoist-nested-functions": "^1.2.0",
    "cross-env": "^7.0.2",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.5",
    "enzyme-to-json": "^3.6.1",
    "eslint": "^7.2.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.0.0",
    "eslint-plugin-unicorn": "^23.0.0",
    "husky": "^4.3.0",
    "imagemin-lint-staged": "^0.4.0",
    "jest": "^26.6.3",
    "jest-enzyme": "^7.1.2",
    "jest-styled-components": "^7.0.3",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.2",
    "npm-run-all": "^4.1.5",
    "prettier": "2.2.0",
    "rollup": "^2.33.3",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "stylelint": "^13.8.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-prettier": "^1.1.2",
    "stylelint-processor-styled-components": "^1.10.0"
  },
  "jest": {
    "transform": {
      "\\.m?jsx?$": [
        "babel-jest",
        {
          "rootMode": "upward"
        }
      ]
    },
    "verbose": true,
    "cacheDirectory": "node_modules/.cache/jest",
    "collectCoverageFrom": [
      "{components,packages}/**/src/**/*.{js,jsx,mjs}"
    ],
    "coverageDirectory": "coverage",
    "testMatch": [
      "**/__tests__/**/*.?(m)js?(x)"
    ],
    "moduleNameMapper": {
      "@zenkit/(.*)": [
        "<rootDir>/components/$1/src",
        "<rootDir>/packages/$1/src"
      ]
    },
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "setupFilesAfterEnv": [
      "./scripts/test/setup.js"
    ]
  },
  "eslintConfig": {
    "extends": [
      "airbnb",
      "airbnb/hooks",
      "airbnb/whitespace",
      "plugin:prettier/recommended",
      "plugin:unicorn/recommended",
      "prettier",
      "prettier/babel",
      "prettier/react",
      "prettier/unicorn",
      "plugin:jest/recommended"
    ],
    "plugins": [
      "prettier",
      "unicorn",
      "jest"
    ],
    "parserOptions": {
      "sourceType": "module"
    },
    "env": {
      "es6": true,
      "browser": true,
      "node": true
    },
    "rules": {
      "react/prop-types": 0
    }
  },
  "prettier": {},
  "stylelint": {
    "extends": [
      "stylelint-config-recommended",
      "stylelint-config-styled-components",
      "stylelint-config-rational-order",
      "stylelint-config-prettier"
    ],
    "plugins": [
      "stylelint-prettier"
    ],
    "rules": {
      "prettier/prettier": true
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional",
      "@commitlint/config-lerna-scopes"
    ],
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "build",
          "chore",
          "ci",
          "docs",
          "feat",
          "fix",
          "perf",
          "refactor",
          "revert",
          "style",
          "test"
        ]
      ]
    }
  },
  "lint-staged": {
    "*.{js,jsx,mjs}": [
      "stylelint --fix",
      "eslint --fix"
    ],
    "*.{png,jpeg,jpg,gif,svg}": [
      "imagemin-lint-staged"
    ],
    "*.{md,mdx,json}": [
      "prettier --write --ignore-unknown"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
